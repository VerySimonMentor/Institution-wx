.password-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
}

.text-style {
    font-size: 20px;
    color: #333;
    margin-bottom: 20px;
    text-align: center;
}

.input-style {
    width: 100%;
    border: 1px solid #ddd;
    padding: 10px;
    margin-bottom: 20px;
    background-color: #f9f9f9;
}

.button-style {
    width: 100%;
    background-color: #1e90ff;
    color: #fff;
    border-radius: 5px;
    padding: 10px;
    text-align: center;
}
