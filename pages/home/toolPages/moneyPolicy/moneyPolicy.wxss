.country-scroll {
    white-space: nowrap;
}

.country-item {
    display: inline-block;
    padding: 10px;
}

.country-item-selected {
    color: rgb(123, 187, 29);
    padding-bottom: 5px;
    border-bottom: 2px solid rgb(123, 187, 29);
    font-size: 20px;
    font-weight: 550;
    margin-left: 10px;
}

.country-item-unselected {
    font-size: 20px;
    font-weight: 550;
    margin-left: 10px;
}

.search-container {
    position: relative;
    width: 100%;
    height: 40px;
    display: flex;
    align-items: center;
}

.search-input {
    width: 100%;
    height: 100%;
    padding-left: 20px;
    border-radius: 20px;
    background-color: #f3f3f3;
    flex-grow: 1;
    margin-left: 20px;
}

.filter-button {
    margin-left: 10px;
    background-color: transparent;
}

.module-title{
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
    padding: 10rpx;
}

.all-item-container{
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
    padding: 10rpx;
}

.item {
    display: inline-flex;
    padding: 10rpx;
    border-radius: 10rpx;
    margin: 10rpx;
    display: inline-flex;
    background-color: gray;
}

.item-selected {
    display: inline-flex;
    padding: 10rpx;
    border-radius: 10rpx;
    margin: 10rpx;
    background-color: green;
    color: white;
}

/* 设置action按钮，即确认和取消 */
.action-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 20rpx;
}  

.action-button{
    display: inline-block;
    width: 20rpx;
    text-align: center;
    margin: 10rpx;
    padding: 20rpx;
    border-radius: 20rpx;
    font-size: 28rpx;
}

.action-button.cancel {
    background-color: gray;
    color: white;
    margin-right: 70rpx;
    margin-left: 70rpx;
}

.action-button.confirm {
    background-color: green;
    color: white;
    margin-left: 70rpx;
    margin-right: 70rpx;
}
/* ation按钮设置结束 */
