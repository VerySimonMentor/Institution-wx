<view class="footer">
  <view class="tab" wx:if="{{pageIndex==1}}" class="activeFoot">首页</view>
  <view class="tab" bind:tap="onTapHome" wx:else>首页</view>
  <view class="tab" wx:if="{{pageIndex==2}}" class="activeFoot">学生</view>
  <view class="tab" bind:tap="onTapStudent" wx:else>学生</view>
  <view class="tab" wx:if="{{pageIndex==3}}" class="activeFoot">消息</view>
  <view class="tab" bind:tap="onTapMessage" wx:else>消息</view>
  <view class="tab" wx:if="{{pageIndex==4}}" class="activeFoot">我的</view>
  <view class="tab" bind:tap="onTapMy" wx:else>我的</view>
</view>

<view wx:if="{{pageIndex==4}}">
  <view wx:if="{{loginState==0}}">
    <view class="user-info-container">
      <image class="user-image" src="/pages/index/images/logo.png"></image>
      <text class="text" bind:tap="onTapLogin">立即登录</text>
    </view>
    <text class="text">我的工具</text>
    <view class="user-tools">
    
    </view>
  </view>

  <view class="password-view" wx:elif="{{loginState!=0&&noPassword}}">
    <text class="text-style">请设置密码</text>
    <input class="input-style" placeholder="请输入密码" password="true" bindinput="onInputPassword"></input>
    <input class="input-style" placeholder="请再次输入密码" password="true" bindinput="onInputPasswordAgain"></input>
    <button class="button-style" bind:tap="onTapSetPassword">确定</button>
  </view>

  <view wx:elif="{{loginState==1}}">
    <view class="user-info-container">
      <image class="user-image" src="/pages/index/images/logo.png"></image>
      <text class="text" bind:tap="onTapLogin">{{phoneNumber}}</text>
    </view>
    <text class="text">我的工具</text>
    <view class="user-tools">
      <text class="text" bind:tap="onTapFeedback">意见反馈</text>
      <text class="text" bind:tap="onTapResetPassword">重置密码</text>
      <text class="text" bind:tap="onTapQuitAccount">账号退出</text>
      <text class="text" bind:tap="onTapContactUs">联系我们</text>
    </view>
  </view>
</view>