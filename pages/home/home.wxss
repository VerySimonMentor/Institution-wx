.user-info-container {
    display: flex;
    background-image: none;
    background-size: cover;
    height: 20vh;
    border-color: antiquewhite;
    border-width: 2px;
    border-style: solid;
    align-items: center;
    margin-bottom: 10px;
}

.user-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-left: 10px;
}

.text {
    margin-left: 10px;
    font-size: 16px;
    font-weight: bold;
}

.user-tools {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: repeat(4, 1fr);
}