.user-info-container {
    display: flex;
    background-image: none;
    background-size: cover;
    height: 20vh;
    border-color: antiquewhite;
    border-width: 4rpx;
    border-style: solid;
    align-items: center;
    margin-bottom: 20rpx;
}

.user-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-left: 20rpx;
}

.text {
    font-size: 30rpx;
    font-weight: bold;
    display: block;
    margin-bottom: 20rpx;
}

.user-tools {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    padding: 40rpx;
}

.footer {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 1fr;
    position: fixed;
    bottom: 20rpx;
    width: 100%;
    justify-items: center;
    align-items: center;
}

.tab {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.activeFoot {
    color: #07c160;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.password-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
}

.text-style {
    font-size: 20rpx;
    color: #333;
    margin-bottom: 20px;
    text-align: center;
}

.input-style {
    width: 100%;
    border: 1rpx solid #ddd;
    padding: 10rpx;
    margin-bottom: 20rpx;
    background-color: #f9f9f9;
}

.button-style {
    width: 100%;
    background-color: #1e90ff;
    color: #fff;
    border-radius: 5rpx;
    padding: 10rpx;
    text-align: center;
}

.image {
    width: 60rpx;
    height: 60rpx;
}

.foot-image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
}

.tool-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
