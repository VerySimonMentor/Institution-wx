.user-info-container {
    display: flex;
    background-image: none;
    background-size: cover;
    height: 20vh;
    border-color: antiquewhite;
    border-width: 2px;
    border-style: solid;
    align-items: center;
    margin-bottom: 10px;
}

.user-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-left: 10px;
}

.text {
    margin-left: 10px;
    font-size: 16px;
    font-weight: bold;
}

.user-tools {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    padding: 20px;
}

.footer {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 1fr;
    position: fixed;
    bottom: 20px;
    width: 100%;
    justify-items: center;
    align-items: center;
}

.activeFoot {
    color: #07c160;
}

.password-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
}

.text-style {
    font-size: 20px;
    color: #333;
    margin-bottom: 20px;
    text-align: center;
}

.input-style {
    width: 100%;
    border: 1px solid #ddd;
    padding: 10px;
    margin-bottom: 20px;
    background-color: #f9f9f9;
}

.button-style {
    width: 100%;
    background-color: #1e90ff;
    color: #fff;
    border-radius: 5px;
    padding: 10px;
    text-align: center;
}
